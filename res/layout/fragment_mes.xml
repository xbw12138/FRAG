<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical" >

    <LinearLayout
        android:id="@+id/mainLayout11"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2f2f2"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/mime_layout_05"
            android:layout_width="fill_parent"
            android:layout_height="200dip"
            android:background="#ffffff"
            android:clickable="true" >

            <ImageView
                android:id="@+id/mingpianImg"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/mingpian" />

            <com.example.frag_fragment.CircleImg
                android:id="@+id/avatarImg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/image_head" />

            <TextView
                android:id="@+id/text_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/row_img_05"
                android:layout_centerHorizontal="true"
                android:text="还未设置昵称"
                android:textColor="#FFB501"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/text_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="这个人很懒，什么都没留"
                android:textColor="#808080"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/row_img_05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/text_02"
                android:layout_centerHorizontal="true"
                android:scaleType="matrix"
                android:src="@drawable/icn_boy" />
        </RelativeLayout>

        <com.example.frag_model.PullScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:headerHeight="300dp"
            app:headerVisibleHeight="100dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dip"
                    android:background="@drawable/usermainpage_bg_center"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/mime_layout_01"
                        android:layout_width="fill_parent"
                        android:layout_height="42dip"
                        android:clickable="true" >

                        <ImageView
                            android:id="@+id/mime_img_01"
                            android:layout_width="36.0dip"
                            android:layout_height="36.0dip"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dip"
                            android:background="@drawable/fitem1"
                            android:scaleType="fitXY" />

                        <TextView
                            android:id="@+id/card_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dip"
                            android:layout_toRightOf="@id/mime_img_01"
                            android:text="我的消息"
                            android:textColor="#202020"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/row_img_01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dip"
                            android:scaleType="matrix"
                            android:src="@drawable/mm_submenu" />
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:layout_marginLeft="60dip"
                        android:background="@drawable/line" />

                    <RelativeLayout
                        android:id="@+id/mime_layout_02"
                        android:layout_width="fill_parent"
                        android:layout_height="42dip"
                        android:clickable="true" >

                        <ImageView
                            android:id="@+id/mime_img_02"
                            android:layout_width="36.0dip"
                            android:layout_height="36.0dip"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dip"
                            android:background="@drawable/fitem2"
                            android:scaleType="fitXY" />

                        <TextView
                            android:id="@+id/card_text_10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dip"
                            android:layout_toRightOf="@id/mime_img_02"
                            android:text="我的心情"
                            android:textColor="#202020"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/row_img_02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dip"
                            android:scaleType="matrix"
                            android:src="@drawable/mm_submenu" />
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/mime_layout_06"
                    android:layout_width="fill_parent"
                    android:layout_height="42dip"
                    android:layout_marginTop="15dip"
                    android:background="@drawable/usermainpage_bg_center"
                    android:clickable="true" >

                    <ImageView
                        android:id="@+id/mime_img_06"
                        android:layout_width="36.0dip"
                        android:layout_height="36.0dip"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:background="@drawable/fitem3"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/card_text_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:layout_toRightOf="@id/mime_img_06"
                        android:text="个人资料"
                        android:textColor="#202020"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/row_img_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:scaleType="matrix"
                        android:src="@drawable/mm_submenu" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/mime_layout_08"
                    android:layout_width="fill_parent"
                    android:layout_height="42dip"
                    android:layout_marginTop="15dip"
                    android:background="@drawable/usermainpage_bg_center"
                    android:clickable="true" >

                    <ImageView
                        android:id="@+id/ImageView08"
                        android:layout_width="36.0dip"
                        android:layout_height="36.0dip"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:background="@drawable/fitem3"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/TextView08"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:layout_toRightOf="@+id/ImageView08"
                        android:text="我的会员"
                        android:textColor="#202020"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/row_img_011"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:scaleType="matrix"
                        android:src="@drawable/mm_submenu" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/mime_layout_07"
                    android:layout_width="fill_parent"
                    android:layout_height="42dip"
                    android:layout_marginTop="15dip"
                    android:background="@drawable/usermainpage_bg_center"
                    android:clickable="true" >

                    <ImageView
                        android:id="@+id/mime_img_05"
                        android:layout_width="36.0dip"
                        android:layout_height="36.0dip"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:background="@drawable/fitem4"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/card_text_11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:layout_toRightOf="@id/mime_img_05"
                        android:text="设置"
                        android:textColor="#202020"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/row_img_010"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:scaleType="matrix"
                        android:src="@drawable/mm_submenu" />
                </RelativeLayout>

                <Button
                    android:id="@+id/exit_login_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="50dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="15dip"
                    android:background="@drawable/button_exit_askfor"
                    android:text="退出登录"
                    android:textColor="#fff"
                    android:textSize="16sp" />
            </LinearLayout>
        </com.example.frag_model.PullScrollView>
    </LinearLayout>

</RelativeLayout>