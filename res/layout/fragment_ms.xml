<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" 
    android:id="@+id/mainLayout11">

    <ImageView
        android:id="@+id/background_img"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="-100dp"
        android:background="@drawable/mingpian"
        android:contentDescription="@null"
        android:scaleType="fitXY" />

    <com.example.frag_model.PullScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:headerHeight="300dp"
        app:headerVisibleHeight="100dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:src="@drawable/actionbar_camera_icon" />

            <RelativeLayout
                android:id="@+id/scroll_view_head"
                android:layout_width="match_parent"
                android:layout_height="112dp"
                android:layout_marginTop="100dp"
                android:background="#40D5C3E2"
                android:orientation="vertical" >

                <com.example.frag_fragment.CircleImg
                    android:id="@+id/avatarImg"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="21dp"
                    android:contentDescription="@string/app_name"
                    android:padding="1px"
                    android:src="@drawable/image_head" />

                <TextView
                    android:id="@+id/text_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="48dp"
                    android:layout_toRightOf="@+id/avatarImg"
                    android:ellipsize="end"
                    android:shadowColor="@android:color/black"
                    android:shadowDx="3.0"
                    android:shadowDy="3.0"
                    android:shadowRadius="5.0"
                    android:singleLine="true"
                    android:text="昵称"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/row_img_05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/avatarImg"
                    android:layout_toRightOf="@+id/avatarImg"
                    android:scaleType="matrix"
                    android:src="@drawable/icn_boy" />

                <TextView
                    android:id="@+id/text_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/text_01"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:text="这个人很懒"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-1dp"
                android:background="#F7F4F0"
                android:orientation="vertical"
                android:paddingBottom="8dp" >

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <RelativeLayout
                            android:id="@+id/mime_layout_06"
                            android:layout_width="fill_parent"
                            android:layout_height="42dip"
                            android:layout_marginTop="15dip"
                            android:background="@drawable/usermainpage_bg_center"
                            android:clickable="true" >

                            <ImageView
                                android:id="@+id/mime_img_06"
                                android:layout_width="36.0dip"
                                android:layout_height="36.0dip"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dip"
                                android:background="@drawable/fitem2"
                                android:scaleType="fitXY" />

                            <TextView
                                android:id="@+id/card_text_13"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dip"
                                android:layout_toRightOf="@id/mime_img_06"
                                android:text="个人资料"
                                android:textColor="#202020"
                                android:textSize="16sp" />

                            <ImageView
                                android:id="@+id/row_img_10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dip"
                                android:scaleType="matrix"
                                android:src="@drawable/mm_submenu" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/mime_layout_08"
                            android:layout_width="fill_parent"
                            android:layout_height="42dip"
                            android:layout_marginTop="15dip"
                            android:background="@drawable/usermainpage_bg_center"
                            android:clickable="true" >

                            <ImageView
                                android:id="@+id/ImageView08"
                                android:layout_width="36.0dip"
                                android:layout_height="36.0dip"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dip"
                                android:background="@drawable/fitem3"
                                android:scaleType="fitXY" />

                            <TextView
                                android:id="@+id/TextView08"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dip"
                                android:layout_toRightOf="@+id/ImageView08"
                                android:text="我的会员"
                                android:textColor="#202020"
                                android:textSize="16sp" />

                            <ImageView
                                android:id="@+id/row_img_011"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dip"
                                android:scaleType="matrix"
                                android:src="@drawable/mm_submenu" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/mime_layout_07"
                            android:layout_width="fill_parent"
                            android:layout_height="42dip"
                            android:layout_marginTop="15dip"
                            android:background="@drawable/usermainpage_bg_center"
                            android:clickable="true" >

                            <ImageView
                                android:id="@+id/mime_img_05"
                                android:layout_width="36.0dip"
                                android:layout_height="36.0dip"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dip"
                                android:background="@drawable/fitem4"
                                android:scaleType="fitXY" />

                            <TextView
                                android:id="@+id/card_text_11"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dip"
                                android:layout_toRightOf="@id/mime_img_05"
                                android:text="设置"
                                android:textColor="#202020"
                                android:textSize="16sp" />

                            <ImageView
                                android:id="@+id/row_img_010"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dip"
                                android:scaleType="matrix"
                                android:src="@drawable/mm_submenu" />
                        </RelativeLayout>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
    </com.example.frag_model.PullScrollView>

</RelativeLayout>