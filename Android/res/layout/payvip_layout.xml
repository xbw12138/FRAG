<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/RelativeLayout08"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar2"
        android:background="@color/top_bar_normal_bg"
        android:gravity="center_vertical" >
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:background="@color/top_bar_normal_bg"
        android:gravity="center_vertical" >

        <include layout="@layout/commom_back_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的会员"
            android:textColor="#fff"
            android:textSize="18sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="开通会员后：\n1.你可以装X\n2.你还可以装X\n3.你可以无限装X\n\n\n"
        android:textColor="#000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.59"
        android:gravity="center"
        android:text="收款方为第三方支付服务商\n付款后您的vip将在当天开通\n如有问题，请联系QQ619123295\n"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="169dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/payNowByALiPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/button_exit_askfor"
            android:text="支付宝充值"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/payNowByWeiXin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/button_exit_askfor"
            android:text="微 信 充 值 "
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/payResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/button_exit_askfor"
            android:text="会员充值记录查询"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>